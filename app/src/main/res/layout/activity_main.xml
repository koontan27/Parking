<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/empty_slot1"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/empty_slot1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/empty_slot2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/empty_slot2"/>
    <Button
            android:text="@string/empty_slot2"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/empty_slot2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/empty_slot1"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/empty_slot3"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="@string/empty_slot3"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/empty_slot3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/empty_slot2"
            app:layout_constraintStart_toEndOf="@+id/empty_slot2" app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/edit_text1"
            android:hint="@string/edit_text1" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/empty_slot1"
            app:layout_constraintBottom_toTopOf="@+id/edit_text2" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:ems="10"
            android:id="@+id/edit_text2"
            android:hint="@string/edit_text2" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/edit_text1"
            app:layout_constraintBottom_toTopOf="@+id/edit_text3"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text3"
            android:textAlignment="center" android:hint="@string/edit_text3"
            app:layout_constraintTop_toBottomOf="@+id/edit_text2"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/button4"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/button_submit"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/button4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button6"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/button_cancel"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>